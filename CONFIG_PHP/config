RUN apt-get update && \
    apt-get install -y \
    git \
    zip \
    unzip \
    libzip-dev \
    libssl-dev && \
    docker-php-ext-install pdo_mysql zip pgsql pdo pdo_pgsql  && \
    apt-get install -y libpq-dev && \
    curl -sLS https://getcomposer.org/installer | php -- --install-dir=/usr/bin/ --filename=composer && \
    composer install && \
    a2enmod rewrite && \
    a2enmod ssl && \ 
    a2enmod headers && \
    php artisan cache:clear && php artisan config:clear && php artisan view:clear && php artisan route:clear && php artisan clear-compiled && php artisan optimize:clear
